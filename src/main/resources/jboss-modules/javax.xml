<modules xmlns="http://smartics.de/ns/jboss-modules-descriptor/1">
  <module
    name="javax.inject.api"
    slot="main">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <groupId>javax.inject</groupId>
        </include>
      </includes>
    </match>
  </module>

  <module
    name="javax.servlet.api"
    slot="main">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <groupId>javax.servlet</groupId>
          <artifactId>servlet-api</artifactId>
        </include>
      </includes>
    </match>
  </module>

  <module
    name="javax.servlet.jsp.api"
    slot="main">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <groupId>javax.servlet</groupId>
          <artifactId>jsp-api</artifactId>
        </include>
      </includes>
    </match>
  </module>

  <module
    name="javax.validation.api"
    slot="main">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <groupId>javax.validation</groupId>
          <artifactId>validation-api</artifactId>
        </include>
      </includes>
    </match>
  </module>

  <module
    name="javax.portlet.api"
    slot="main">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <groupId>portlet-api</groupId>
        </include>
      </includes>
    </match>
  </module>

  <module
    name="javax.xml.rpc.api"
    slot="main">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <groupId>javax.xml</groupId>
          <artifactId>jaxrpc-api</artifactId>
        </include>
      </includes>
    </match>

    <apply-to-dependencies>
      <dependencies>
        <match>
          <includes>
            <include>javax.xml.soap.api</include>
          </includes>
        </match>
        <apply>
          <export>true</export>
        </apply>
      </dependencies>
    </apply-to-dependencies>

    <apply-to-module>
      <dependencies>
        <module name="javax.api" />
        <module name="javax.xml.soap.api" />
        <module name="javax.servlet.api" />
      </dependencies>
    </apply-to-module>
  </module>

  <module
    name="javax.activation.api"
    slot="main">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <groupId>javax.activation</groupId>
          <artifactId>activation</artifactId>
        </include>
      </includes>
    </match>

    <apply-to-dependencies>
      <dependencies>
        <match>
          <includes>
            <include>javax.xml.soap.api</include>
          </includes>
        </match>
        <apply>
          <export>true</export>
        </apply>
      </dependencies>
    </apply-to-dependencies>

    <apply-to-module>
      <dependencies>
        <module name="javax.api" />
        <module name="javax.mail.api">
          <imports>
            <include path="META-INF" />
          </imports>
        </module>
        <module name="com.sun.xml.messaging.saaj" />
        <module name="org.jboss.ws.native.jbossws-native-core" />
        <module
          name="org.apache.cxf"
          optional="true" />
      </dependencies>
    </apply-to-module>
  </module>

  <module
    name="javax.xml.soap.saaj-api"
    slot="main">
    <directives>
      <skip>true</skip>
    </directives>
    <match>
      <includes>
        <include>
          <groupId>javax.activation</groupId>
          <artifactId>activation</artifactId>
        </include>
      </includes>
    </match>

    <apply-to-module>
      <dependencies>
        <module name="javax.activation.api" />
      </dependencies>
    </apply-to-module>
  </module>
</modules>
